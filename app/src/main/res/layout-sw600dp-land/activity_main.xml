<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_D"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/picLength"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/M_margin"
        android:layout_marginTop="@dimen/M_margin"
        android:layout_marginBottom="@dimen/M_margin"
        android:background="@color/brown"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/S_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/M_margin"
        android:layout_marginTop="@dimen/M_margin"
        android:layout_marginEnd="@dimen/M_margin"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/picture"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/picName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="@dimen/fontName" />

        <TextView
            android:id="@+id/picAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="@dimen/fontAuthor" />

        <TextView
            android:id="@+id/picDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/S_margin"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="@dimen/fontDate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/M_margin"
        android:layout_marginBottom="@dimen/M_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/picture">

        <Button
            android:id="@+id/buttonPrev"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/brown"
            android:contentDescription="@string/prev_button_desc"
            android:text="@string/buttonPrev"
            android:textSize="@dimen/fontDate"
            android:tooltipText="@string/prev_button_desc" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/M_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/brown"
            android:contentDescription="@string/next_button_desc"
            android:text="@string/buttonNext"
            android:textSize="@dimen/fontDate"
            android:tooltipText="@string/next_button_desc" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>